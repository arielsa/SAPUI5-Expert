
<mvc:View   controllerName="logaligroup.sapui5.controller.InvoicesList"
            xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc"
            >

    <List   id="invoiceList" headerText="{i18n>invoiceListTittle}" 
            class = "sapUiResponsiveMargin" width="auto" 
            items="{path: 'invoices>/Invoices',
                    sorter : {path:'ShipperName',
                              group: true}                    
                    }" >
        <headerToolbar>            
            <Toolbar id="tool01" >
                <Title id="ASD" text="{i18n>invoiceListTittle}" />
                <ToolbarSpacer id="yolb7" />
                <SearchField id="ser01" width="60%"  search=".onFilterInvoices"/>
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem id="asasdw" 
                            title="{invoices>Quantity} x {invoices>ProductName}" 
                            number="{ parts : [
                                                {path:'invoices>ExtendedPrice'} , 
                                                {path:'currency>/usd'}                                             
                                            ],
                                     type:'sap.ui.model.type.Currency',
                                     formatOptions : {
                                                        showMeasure : false,
                                                        style:'short',
                                                        roundingModel:'TOWARDS_ZERO'
                                                    }       
                                    }"
                            numberUnit="{currency>/usd}"
                            numberState="{= ${invoices>ExtendedPrice} > 50 ? 'Success' : 'Error' }">
                <firstStatus>
                    <ObjectStatus id="objst" text="{path: 'invoices>Status',
                                                    formatter : '.formater.invoicesStatus'
                                                    }" >
                    </ObjectStatus>
                </firstStatus>
            </ObjectListItem> 
            
        </items>
    </List>

</mvc:View>
<mvc:View controllerName="logaligroup.sapui5.controller.App" 
        displayBlock="true"
        xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Shell id="shell1">     
        <App id="app1">
            <pages>
                <Page id="page1" title="{i18n>appTitle}">
                    <content>
                        <Panel id="panel1" headerText="{i18n>helloPanel}" 
                                class="sapUiResponsiveMargin"
                                width="auto">
                            <content>
                                                        
                                <Button id="btn1" text="{i18n>showHelloButtonText}" 
                                        class="sapUiSmallMarginEnd"
                                        press=".onShowHello"/>
                                
                                <Input id="in01" value="{/recipient/name}"  
                                    valueLiveUpdate="true"  description="" 
                                    width="60%"/>
                                    
                                <Text id="text1" text="hello {/recipient/name}" class="sapUiSmallMargin boldElement sapthemeHighlight-asColor "/>
                                
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>    
    </Shell>   

</mvc:View>
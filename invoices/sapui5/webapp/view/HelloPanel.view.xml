<mvc:View controllerName="logaligroup.sapui5.controller.HelloPanel" 
        displayBlock="true"
        xmlns:core = "sap.ui.core"
        xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">

    <Panel id="panel1" headerText="{i18n>helloPanel}" 
            class="sapUiResponsiveMargin"
            width="auto">
        <content>   

            <Button id="btn0" text="{i18n>helloDialogBut}" 
                    class="sapUiSmallMarginEnd"
                    press=".onOpenDialog"/>
            

            <Button id="btn1" text="{i18n>showHelloButtonText}" 
                    class="sapUiSmallMarginEnd"
                    press=".onShowHello"/>
            
            <Input id="in01" value="{/recipient/name}"  
                valueLiveUpdate="true"  description="" 
                width="60%"/>

            <Text id="text1" text="hello {/recipient/name}" 
                            class="sapUiSmallMargin boldElement sapthemeHighlight-asColor "/>
            
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.sapui5.view.Form01" type="XML" />

</mvc:View>